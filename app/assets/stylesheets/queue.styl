#queue
  -webkit-transition: padding-top 0.25s
  -webkit-overflow-scrolling: touch
  overflow: auto
  height: 100%
  box-sizing: border-box
  padding: 60px 0 0
  > li
    margin-top: 1px
    height: 75px
  > .track
    position: relative
    background-size: 100% auto
    transition: all 0.2s
    -webkit-align-items: flex-start
    font-size: 20px
    line-height: 25px
    &:hover
      > .controls > button
        visibility: visible
    > .text
      position: relative
      z-index: 1
      padding: 12px 0
      > .artist-name
        &:before
          content: "by "
          opacity: 0.7
        font-size: 0.8em
    > .controls
      height: 75px

#queue > #current-track
  height: 300px
  > .controls
    > .remove
      display: none

li#current-track-fixed.track
  height: 75px !important
  margin-top: 0 !important
  position: fixed
  width: 300px
  right: 0
  z-index: 1
  display: none
  box-shadow: 0 0 5px rgba(0,0,0, 0.9)
  > .remove
    display: none
  &.top
    display: block
    top: 75px !important
  &.bottom
    display: block
    bottom: 0 !important


.add-more-to-queue
  color: #888
  line-height: 75px
  text-align: center

.blurred-area
  background-repeat no-repeat
  background-position center top
  position: absolute
  top: 0
  left: 0
  right: 0
  height: 75px
  box-shadow 0 1px 30px rgba(black, 0.5)

- script = (url) ->
  %script{src: url, type: "text/javascript"}

- css = (url) ->
  %link{rel: 'stylesheet', href: url}

:coffeescript
  component = (name) =>
    p    = name.replace(/\./g, '/')
    name = @path.basename(p)
    dir  = @path.dirname(p)
    file = @path.join('/components', dir, name, name)

    css(file + '.css')
    script(file + '.jst')
    script(file + '.js')

  view = (p) =>
    name = @path.basename(p)
    dir  = @path.dirname(p)
    file = @path.join('/views', dir, name, name)

    css(file + '.css')
    script(file + '.jst')
    script(file + '.js')

  adapter = (name) ->
    script("/adapters/#{name}.js")

  model = (name) ->
    script("/models/#{name}.js")

  collection = (name) ->
    script("/collections/#{name}.js")

  router = (name) ->
    script("/routers/#{name}.js")


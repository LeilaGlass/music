font-color = hsl(200, 70, 10)
font-color = rgba(white, 0.7)
background-color = hsl(200, 70, 1)

#bar > #show-sidebar
  display: none
  width 60px
  flex-shrink 0
  &.slide-to-left:before
    content: '\f054'

#bar
  text-transform lowercase
  background-color rgba(background-color, 0.8)

  font-size 16px
  white-space nowrap
  transition: height 0.25s
  display: flex
  align-items: center
  height 60px
  position: fixed
  top: 0
  left: 0
  right: 0
  z-index: 100
  -webkit-border-image-source linear-gradient(to right, white, black)
  color font-color
  a, button
    &:active
      color: rgba(font-color, 0.8)

  > a, > button
    -webkit-align-self: stretch
    flex-shrink: 1
    overflow hidden
    text-overflow ellipsis
    display: flex
    padding 2px 6px 0
    border-bottom 2px solid transparent
    transition border-color 0.5s
    -webkit-align-items: center
    -webkit-justify-content: center
    &:hover
      border-color rgba(font-color, 0.3)
    &.current
      border-color font-color
      -webkit-mask-image none

#logo
  width: 60px
  text-align: center
  cursor: default
  flex-shrink: 0
  box-sizing: border-box
  &:active
    color rgba(font-color, 0.8)

button:active, a:active
  color rgba(font-color, 0.8)

@media (max-width: 900px)
  #bar > #show-sidebar
    display: inline-block
  #bar, #sidebar
    right: -300px
    transition all 0.25s
@media (max-height: 400px)
  #bar
    height: 40px
    > [class *= 'icon']
      line-height: 40px

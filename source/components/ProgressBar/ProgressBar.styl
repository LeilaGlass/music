bar-color = hsl(200, 70, 10)

.progress-bar
  font-size 11px
  line-height 15px
  position: absolute
  left: 0
  right: 0
  bottom: 0
  z-index: 1
  margin-left 1px

  > .time
    pointer-events none
    visibility hidden
    padding 2px
    position absolute
    bottom 0px
    // -webkit-transform translateX(-50%)
  &:hover
    > .time
      visibility visible

  > .click-area
    height 10px
    cursor: pointer

    > .empty
      pointer-events none
      background-color rgba(bar-color, 0.2)
      bottom 0
      height: 2px
      left 0
      position absolute
      right 0

      > .position
        pointer-events none
        height 100%
        position: absolute
        left: 0
        z-index: 1
        background-color bar-color
        width: 0
        transition: height 0.2s


modal-album-animation-duration = modal-animation-duration

@keyframes fade-out
  from
    opacity 0.9999
  to
    opacity 0.7

.album-modal > .modal-inner
  -webkit-overflow-scrolling touch
  background-position center top
  background-repeat no-repeat
  background-size 100% auto
  background-size auto 100%
  position relative

  > .back
    display -webkit-flex
    flex-direction column
    height modal-album-height
    margin-top 100%
    min-height 100%
    overflow hidden
    position absolute
    width 100%

    > .blur, > .shadow
      bottom 0
      left 0
      position absolute
      right 0
      top 0
      transform translate3d(0,0,0)

    > .blur
      background-position center top
      background-repeat no-repeat
      background-size 100% auto
      margin-top -100%

    > .shadow
      transition opacity 1s
      &.translucent
        opacity 0.7

    > .info
      -webkit-flex-shrink: 0
      padding 30px 20px 0 30px
      padding-bottom 0
      display -webkit-flex
      line-height 40px

      > .text
        text-align center
        flex-grow 1

        > .album-name
          padding-right 10px
          font-size 25px

        > .artist-name
          padding-right 10px
          font-size 16px

          &:before
            content: "by "
            opacity: 0.7

      > .controls
        -webkit-flex-shrink: 0
        text-align: right
        position relative
        > .release-date
          font-size 15px
          font-weight 400

      > .controls-spacer
        -webkit-flex-shrink 100
        visibility hidden
        > .release-date
          white-space nowrap
          overflow hidden
          font-size 15px
    > .content
      // -webkit-mask-image linear-gradient(to top, transparent, black 5%, black 95%, transparent)
      overflow: auto
      margin-bottom 1px
      > .tracks
        padding 30px 0 50px



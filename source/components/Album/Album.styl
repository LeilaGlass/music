.albums > .album
  position relative
  display block
  float left
  width 100%

  @media (min-width: 300px)
    width 50%

  @media (min-width: 600px)
    width 33.333%

  @media (min-width: 1200px)
    width 25%

  @media (min-width: 1800px)
    width 20%

  &::before
    content ""
    display block
    padding-top 100%

  &.unavailable
    opacity: 1

    &::before
      display -webkit-flex
      line-height 50px
      background-color rgba(255,255,255, 0.7)
      padding-top -webkit-calc(100% \- 50px)
      content "Unavailable"
      padding-left 15px
      color #333

.album
  position relative
  background-size cover
  background-repeat no-repeat

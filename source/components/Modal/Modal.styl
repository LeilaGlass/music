.modal
  align-items center
  animation fade-in modal-animation-duration
  bottom 0
  display flex
  justify-content center
  left 0
  position fixed
  right 300px
  top 60px
  transition top 0.25s
  z-index 1

  > .modal-inner
    background-color rgba(white, 0.9)
    box-shadow 0 0 100px rgba(black, 0.5)
    flex-grow 0
    flex-shrink 1
    min-height 600px
    max-height 95%
    width 600px
    overflow auto

  > .close
    z-index 1
    font-size 1.2em
    width 40px
    line-height 40px
    position absolute
    top 0
    left 0
    opacity 0.9

    &:hover
      opacity 1

  @media (max-width: 900px)
    right 0

  @media (max-height: 400px)
    top 40px

.modal-shadow
  position absolute
  top 0
  left 0
  bottom 0
  right 0
  background-image radial-gradient(farthest-corner, transparent, rgba(black, 0.8))

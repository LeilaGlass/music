.track
  -webkit-column-break-inside: avoid
  padding 0
  position relative

  &:hover
    > .info > .controls > button
      opacity 0.8

  > .info
    overflow hidden

    > .text
      overflow hidden

    > .track-number
      font-size 0.6em
      text-align center
      width 60px
      float left


    > .controls
      float right
      white-space nowrap
      padding-right 10px
      padding-left 10px

      > button
        opacity 0.05

        &:hover
          opacity 0.999

#bar, #player {
  background-color: rgba(<%= @background %>, 0.85);
  color: rgb(<%= @primary %>);
}

body, #search:focus {
  color: rgb(<%= @primary %>);
  background-color: rgb(<%= @background %>);
}

.accent, #search::-webkit-input-placeholder, a:active {
  color: rgb(<%= @secondary %>);
}

#progress .position {
  background-color: rgb(<%= @primary %>);
  border-right-color: rgb(<%= @secondary %>);
}
